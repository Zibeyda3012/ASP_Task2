@model ASP_Task2.Models.UserAddViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add User</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Add User</h2>
            <form asp-controller="User" asp-action="AddUser" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Person.Name" class="form-label"></label>
                    <input asp-for="Person.Name" class="form-control" />
                    <span asp-validation-for="Person.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Person.Surname" class="form-label"></label>
                    <input asp-for="Person.Surname" class="form-control" />
                    <span asp-validation-for="Person.Surname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Person.Age" class="form-label"></label>
                    <input asp-for="Person.Age" class="form-control" type="number" />
                    <span asp-validation-for="Person.Age" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Image</label>
                    <input type="file" class="form-control" name="image" value="@Model.Person.Image"/>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <a asp-controller="User" asp-action="Index1" class="btn btn-secondary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
