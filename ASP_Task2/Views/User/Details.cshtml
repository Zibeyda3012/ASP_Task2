@model ASP_Task2.Entities.Person

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="card text-center shadow-lg" style="width: 22rem;">
        <img src="/Images/@Model.Image" class="card-img-top rounded-top" alt="User Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name @Model.Surname</h5>
            <p class="card-text"><strong>ID:</strong> @Model.Id</p>
            <p class="card-text"><strong>Age:</strong> @Model.Age</p>
            <a asp-controller="User" asp-action="Index1" class="btn btn-secondary mt-3">Go Back</a>
        </div>
    </div>
</body>
</html>
